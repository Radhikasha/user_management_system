{
  "name": "user-management-system",
  "version": "1.0.0",
  "description": "A modern user management system with React and Node.js",
  "main": "backend/src/index.js",
  "scripts": {
    "start": "node backend/src/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "node backend/src/index.js",
    "client": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "heroku-postbuild": "cd frontend && npm install && npm run build"
  },
  "keywords": [
    "react",
    "node",
    "express",
    "mongodb",
    "user-management",
    "authentication"
  ],
  "author": "Radhikasha",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  }
}
